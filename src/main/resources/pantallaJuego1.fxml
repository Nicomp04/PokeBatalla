<AnchorPane id="AnchorPane" style="-fx-background-image:  url('/backgroundpoke.jpg');" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PantallaBatallaController">
    <!-- Parte inferior e izquierda -->
    <ImageView fx:id="jugadorPokemonImage" fitHeight="150.0" fitWidth="150.0" layoutX="75.0" layoutY="400.0" />
    <ImageView fx:id="enemigoPokemonImage" fitHeight="150.0" fitWidth="150.0" layoutX="1300.0" layoutY="30.0" />
    <ImageView fx:id="ClimaActualImage" fitHeight="1000" fitWidth="1500" pickOnBounds="true" preserveRatio="true" />

    <ProgressBar fx:id="jugadorSaludBar" layoutX="80.0" layoutY="550.0" prefWidth="150.0" />
    <Text fx:id="jugadorPokemonNombre" layoutX="110.0" layoutY="600.0" strokeType="OUTSIDE" strokeWidth="0.0">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Text>

    <!-- Parte Sup e Der -->
    <ProgressBar fx:id="enemigoSaludBar" layoutX="1300.0" layoutY="200.0" prefWidth="150.0" />
    <Text fx:id="enemigoPokemonNombre" layoutX="1350.0" layoutY="250.0" strokeType="OUTSIDE" strokeWidth="0.0">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Text>
<!-- BOOTONERA -->
    <!-- Parte Inferior: Descripción y Botonera spacing="200.0" -->
    <HBox fx:id="parteInferiorHBox" alignment="CENTER" layoutY="650.0" prefHeight="160.0" prefWidth="1800" style="-fx-background-color: #333333;">

        <!-- Descripción (Parte Izquierda) -->
        <VBox fx:id="descripcionVBox" alignment="CENTER" layoutX="300" spacing="200.0">
            <Text fx:id="textoDescripcion" fill="white" layoutX="100" lineSpacing="100" />
        </VBox>
        <VBox fx:id="habilidadesVBox" alignment="CENTER" layoutX="300" spacing="200.0" visible="false">
            <ListView fx:id="habilidadesListView" onMouseClicked="#usarHabilidad" />
        </VBox>

        <!-- Botonera (Parte Derecha) -->
        <VBox fx:id="botoneraVBox" alignment="CENTER_RIGHT" spacing="100.0">
            <HBox alignment="CENTER" spacing="20.0">
                <VBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="luchaButton" minWidth="100.0" onAction="#elegirHabilidades" text=" Lucha " />
                    <Button fx:id="mochilaButton" minWidth="100.0" onAction="#elegirItems" text=" Mochila " />
                </VBox>

                <!--Segundo bloque de botones (3 y 4)-->
                <VBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="pokemonButton" minWidth="100.0" onAction="#cambiarPokemones" text=" Pokemon " />
                    <Button fx:id="huirButton" minWidth="100.0" onAction="#huir" text=" Huir " />
                </VBox>
            </HBox>
        </VBox>
        <VBox fx:id="detallesHabilidadVBox" alignment="CENTER_RIGHT" spacing="10.0" visible="false">
            <Label fx:id="usosLabel" text="Usos restantes: " />
            <Label fx:id="tipoLabel" text="Tipo: " />
        </VBox>

    </HBox>
