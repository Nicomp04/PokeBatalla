<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PantallaCambiarPokemonesController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <HBox>
            <!-- Parte izquierda con imagen -->
            <ImageView fx:id="PokemonImage" fitHeight="400.0" fitWidth="300.0" layoutX="75.0" layoutY="500.0"/>
        </HBox>

        <VBox>
            <!-- Parte derecha con rectángulos en posiciones específicas -->
            <!-- Rectángulo en la parte superior -->
            <Rectangle  height="100" width="300" fill="yellow" AnchorPane.topAnchor="0.0" />

            <!-- Rectángulo en el centro -->
            <Rectangle  height="100" width="300" fill="orange"/>

            <!-- Rectángulo en el centro -->
            <Rectangle  height="100" width="300" fill="purple" AnchorPane.bottomAnchor="0.0" />

            <!-- Rectángulo en la parte inferior -->
            <Rectangle  height="100" width="300" fill="red" AnchorPane.bottomAnchor="0.0" />

            <StackPane GridPane.columnIndex="1" onMouseClicked="#handleMouseClicked">
                <children>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0000006e" height="200.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
                </children>
            </StackPane>
        </VBox>
    </HBox>
</AnchorPane>