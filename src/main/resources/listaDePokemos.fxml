<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PantallaCambiarPokemonesController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <VBox>
            <!-- Parte izquierda con imagen -->
            <ImageView fx:id="jugadorImagen" fitHeight="300.0" fitWidth="300.0" layoutX="75.0" layoutY="500.0"/>
            <StackPane>
                <children>
                    <Rectangle  height="100" width="300" fill="indianred" AnchorPane.topAnchor="0.0" />
                    <VBox alignment="CENTER">
                        <Label fx:id="jugadorNombre" alignment="BOTTOM_CENTER" maxHeight="100" minWidth="300"/>
                        <Label fx:id="pokemonNombre" alignment="BOTTOM_CENTER" maxHeight="100" minWidth="300" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                        <ProgressBar fx:id="vidaPokemon" />
                    </VBox>
                </children>
            </StackPane>
        </VBox>

        <VBox fx:id="listaPokemonsVBox">
            <!-- Parte derecha con rectángulos en posiciones específicas -->
            <!-- Rectángulo en la parte superior -->
            <StackPane onMouseClicked="#handleMouseClicked" fx:id="0">
                <children>
                    <Rectangle  height="100" width="300" fill="grey" AnchorPane.topAnchor="0.0" />
                </children>
            </StackPane>

            <!-- Rectángulo en el centro -->
            <StackPane onMouseClicked="#handleMouseClicked" fx:id="1">
                <children>
                    <Rectangle  height="100" width="300" fill="whitesmoke"/>
                </children>
            </StackPane>

            <!-- Rectángulo en el centro -->
            <StackPane onMouseClicked="#handleMouseClicked" fx:id="2">
                <children>
                    <Rectangle  height="100" width="300" fill="grey" AnchorPane.bottomAnchor="0.0" />
                </children>
            </StackPane>

            <!-- Rectángulo en la parte inferior -->
            <StackPane onMouseClicked="#handleMouseClicked" fx:id="3">
                <children>
                    <Rectangle  height="100" width="300" fill="whitesmoke" AnchorPane.bottomAnchor="0.0" />
                </children>
            </StackPane>
        </VBox>
    </HBox>
</AnchorPane>