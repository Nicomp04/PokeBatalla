<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PantallaCambiarPokemonesController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <VBox>
            <!-- Parte izquierda con imagen -->
            <ImageView fx:id="jugadorImagen" fitHeight="300.0" fitWidth="300.0" layoutX="75.0" layoutY="500.0"/>
            <children>
                <Label fx:id="jugadorNombre"  prefHeight="100" prefWidth= "300" alignment="BOTTOM_CENTER"  />
                <Rectangle  height="100" width="300" fill="blue" AnchorPane.topAnchor="0.0" />
            </children>
        </VBox>

        <VBox>
            <!-- Parte derecha con rectángulos en posiciones específicas -->
            <!-- Rectángulo en la parte superior -->
            <children>
                <Rectangle  height="100" width="300" fill="yellow" AnchorPane.topAnchor="0.0" />
            </children>

            <!-- Rectángulo en el centro -->
            <children>
                <Rectangle  height="100" width="300" fill="orange"/>
            </children>

            <!-- Rectángulo en el centro -->
            <children>
                <Rectangle  height="100" width="300" fill="purple" AnchorPane.bottomAnchor="0.0" />
            </children>

            <!-- Rectángulo en la parte inferior -->
            <children>
                <Rectangle  height="100" width="300" fill="red" AnchorPane.bottomAnchor="0.0" />
            </children>
        </VBox>
    </HBox>
</AnchorPane>